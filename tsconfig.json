{
  "compilerOptions": {
    "noImplicitAny": true,
    "strictNullChecks": false,
    "esModuleInterop": true,
    "allowJs": true,
    "lib": [
      "es6",
      "dom"
    ],
    "typeRoots": [
      "./types"
    ],
    "types": [
      "@types/webpack-env"
    ],
    "baseUrl": ".",
    "paths": { "*": ["@types/*"] },

    /* preact */
    "jsx": "react",
    "jsxFactory": "h",

    "sourceMap": true
  },
  "exclude": [
    "node_modules",
    "template"
  ]
}